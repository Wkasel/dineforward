{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".src",
    "paths": {
      "~config/*": ["../config/*"],
      "~assets/*": ["../public/*"],
      "~views/*": ["views/*"],
      "~theme/*": ["views/theme/*"],
      "~components/*": ["views/components/*"],
      "~containers/*": ["views/containers/*"],
      "~ctx/*": ["utils/contexts/*"],
      "~utils/*": ["utils/*"],
      "~hooks/*": ["utils/hooks/*"],
      "~gen/*": ["../__generated/*"],
      "~gql/*": ["../graphql/*"],
      "~types/*": ["../interfaces/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out",
    "next.config.js",
    ".babelrc",
    "bundles",
    "coverage",
    "test/*",
    "src/__generated"
  ],
  "include": ["src"]
}
