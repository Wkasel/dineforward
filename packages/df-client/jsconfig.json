{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "~components/*": ["./src/components/*"],
      "~config/*": ["./config/*"],
      "~assets/*": ["./public/*"],
      "~theme/*": ["./src/theme/*"],
      "~utils/*": ["./utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out",
    "next.config.js",
    ".babelrc",
    "bundles",
    "coverage",
    "test/*"
  ],
  "include": ["**/*.js", "**/*.jsx"]
}
