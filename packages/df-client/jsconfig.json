{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "~components/*": ["./src/components/*"],
      "~config/*": ["./config/*"],
      "~assets/*": ["./public/*"],
      "~theme/*": ["./src/theme/*"],
      "~utils/*": ["./src/utils/*"],
      "~containers/*": ["./src/containers/*"],
      "~ctx/*": ["./src/contexts/*"],
      "~hooks/*": ["./src/hooks/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out",
    "next.config.js",
    ".babelrc",
    "bundles",
    "coverage",
    "test/*"
  ],
  "include": ["**/*.js", "**/*.jsx", "../sanity/resolveProductionUrl.js"]
}
